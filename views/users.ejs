<script>
    function deleteUser(user) {
        Swal.fire({
            icon: "question",
            html: `<h3>Are you sure you want to delete ${user}?</h3><br><p>This action CANNOT be undone.</p>`,
            input: 'text',
            inputLabel: `Write the users name to proceed (${user}):`,
            showCancelButton: true,
            inputValidator: (value) => {
                if (!value || value !== user) {
                    return 'Incorrect'
                }
            }
        }).then(r => {
            if (r.isConfirmed) {
                $.get(`<%= url %>/users/delete/${user}`,
                    function (data, status) {
                        Swal.fire({
                            text: data.message,
                            icon: data.error ? 'error' : "success",
                            confirmButtonText: 'Ok'
                        })
                        if(!data.error){
                            document.getElementById(`user-${user}`).remove();
                        }
                    });
            }
        })
    }
    let users = <%- JSON.stringify(users) %>;
    let table = document.getElementById("table-body");
    for(const user of users){
        let date = moment(parseInt(user.created_at))
        table.innerHTML = table.innerHTML + `
                        <tr id='user-${user.username}'><td>${user.id}</td><td>${user.username}</td><td>${user.max_sessions}</td><td>${user.enabled === 1 ? "<i class='fas fa-check'></i>" : "<i class='fas fa-cross'></i>"}</td><td>${user.permission}</td><td>${date.format("DD/MM/YYYY HH:mm:ss")}</td><td><div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Actions
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="<%- url %>/users/edit/${user.username}">Edit</a>
    <button class="dropdown-item" onclick='deleteUser("${user.username}")'>Delete</button>
    <a class="dropdown-item" href="<%- url %>/users/sessions/${user.username}">Sessions</a>
    <!--<div class="dropdown-divider"></div>
    <a class="dropdown-item" href="#">Separated link</a>-->
  </div>
</div></td></tr>

        `;
    }
    $(document).ready( function () {
        $('#table-users').DataTable();
    } );
